8.


#include<stdio.h>
int main(int argc, char const *argv[])
{
    int n,sum=0;
    scanf("%d",&n);
    while (n>0)
    {
        sum=sum+n;
        n--;
    }
    printf("%d",sum);
    return 0;
}


9.


#include<stdio.h>
int main()
{
    int n,multi,a,b=1;
    scanf("%d  %d",&a,&n);
    while (b<=n)
    {
        multi=a*b;
        printf("%d\n",multi);
        b++;
    }
    return 0;
}



10.


long fact(int n) {
  long int f=1;
    scanf("%ld",&n);
    while (n>0)
    {
        f=f*n;
        n--;
    }
    return f;
}



15.


#include<stdio.h>
int main(int argc, char const *argv[])
{
    int n,sum=0,m;
    scanf("%d",&m);
    for(n=0;n<=m;n++){
        sum=sum+n;
    }
    printf("%d",sum);
    return 0;
}



16.


#include<stdio.h>
int main()
{
    int number,range,i,t;
    scanf("%d %d",&number,&range);
    for(i=1;i<=range;i++){
        t=number*i;
        printf("%d\n",t);
    }
    return 0;
}
